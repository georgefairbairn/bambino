// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  user_id  String   @unique
  locale   String   @default("en-US")
  voice    String   @default("FEMALE")
  searches Search[]
}

model Search {
  id               Int          @id @default(autoincrement())
  user             User         @relation(fields: [userId], references: [id])
  userId           Int
  genderPreference String
  label            String
  createdAt        DateTime     @default(now())
  lastUpdated      DateTime     @default(now())
  userActions      UserAction[]
  sharingCode      String       @unique @default(dbgenerated("uuid_generate_v4()"))
}

model Name {
  id            Int          @id @default(autoincrement())
  name          String
  gender        String
  origin        String
  pronunciation String
  description   String
  userActions   UserAction[]
}

model UserAction {
  id         Int      @id @default(autoincrement())
  search     Search   @relation(fields: [searchId], references: [id])
  searchId   Int
  name       Name     @relation(fields: [nameId], references: [id])
  nameId     Int
  actionType String
  actionedAt DateTime @default(now())

  @@unique([searchId, nameId], name: "searchId_nameId")
}
